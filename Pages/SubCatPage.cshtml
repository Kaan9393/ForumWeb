@page
@using Microsoft.AspNetCore.Identity;
@using ForumWeb.Areas.Identity.Data;
@inject SignInManager<ForumWebUser> SignInManager
@inject UserManager<ForumWebUser> UserManager
@model ForumWeb.Pages.SubCatPageModel
@{
}


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">



<div class="container center">
    <div class="row">
        <div class="col-lg-12">
            <div>
                <i class="fa fa-globe fa-4x"></i>
            </div>
            <h3>Feel free to choose a subcategory you are interested in!</h3>
            <span></span>
        </div>
    </div> <br /> <br /> <br /> <br />

    <div class="row">
        <div class="col-mg-9">
            <h2>Subcategories</h2> <br />
            @foreach (var category in Model.Categories)
            {
                @foreach (var subCat in Model.SubCategories.Where(s => s.CategoryId == category.Id))
                {
                    <div class="row">
                        <div class="col-md-9">
                            <a asp-page="PostPage" asp-route-subCategoryId="@subCat.Id"> <h4>@subCat.Text</h4> </a> <br />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />



@if (SignInManager.IsSignedIn(User))
{
    <p>Logged in as: @User.Identity.Name</p>
}

